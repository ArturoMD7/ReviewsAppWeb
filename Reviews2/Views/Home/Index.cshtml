@model IEnumerable<Reviews2.Models.MediaItem>

@{
    ViewBag.Title = "Catálogo de Medios";
}
<main>
    <section class="row" aria-labelledby="aspnetTitle">
        <h1 id="title">ASP.NET</h1>
        <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
        <p><a href="https://asp.net" class="btn btn-primary btn-md">Learn more &raquo;</a></p>
    </section>

    <div class="media-container">
        @foreach (var item in Model)
        {
            <div class="media-item">
                <h3>@item.Titulo</h3>
                <p>Categoría: @(item.Category?.Nombre ?? "Sin categoría")</p> 
                @if (!string.IsNullOrEmpty(item.ImagenUrl))
                {
                    <img src="@item.ImagenUrl" alt="@item.Titulo" style="max-width: 200px;" />
                }
                <p>@item.Descripcion</p>
                <p>Plataforma: @item.Plataforma</p>
                <p>Publicado: @(item.FechaPublicacion?.ToString("d") ?? "No especificada")</p>
                <a href="@Url.Action("Details", "MediaItems", new { id = item.Id })" class="btn btn-info">Ver detalles</a>
            </div>
        }
    </div>
</main>